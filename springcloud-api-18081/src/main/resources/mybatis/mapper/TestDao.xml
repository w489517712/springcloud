<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wxm.springcloud.test.dao.TestDao">
    <insert id="save" >
         insert into test
             (name,age)
         values
             (#{name},#{age})
    </insert>
    <select  id="queryList" resultType="com.wxm.springcloud.test.po.Test" >
          select *  from  test t
          where 1=1
          <if test="id != null and id !=''">
              and  t.id = #{id}
          </if>

    </select>
</mapper>